#Define the project
project
	: requirements <toolset>gcc:<cxxflags>-std=c++11
	: usage-requirements
	;

#Tell it about all the libraries
lib boost_unit_test_framework ;
lib boost_test_exec_monitor ;
lib boost_system ;
lib boost_filesystem ;
lib ssl ;
lib crypto ;
lib pthread ;

#Build the unit tests exe
exe mscl_unit_tests
    : [ glob *.cpp ] /mscl-lib//mscl boost_unit_test_framework boost_test_exec_monitor boost_system boost_filesystem ssl crypto pthread
    : <include>.
    ;

#Build the unit tests exe
exe mscl_unit_tests_no_ssl
    : [ glob *.cpp ] /mscl-lib//mscl boost_unit_test_framework boost_test_exec_monitor boost_system boost_filesystem pthread
    : <include>.
    ;